@model Turma

<h1>Editar Turma</h1>

<form method="post" asp-action="Editar">
    <div class="col-7">
        <div>
            <label asp-for="Nome"></label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="alert-danger"></span>
        </div>
        <div>
            <label asp-for="CursoId"></label>
            <input asp-for="CursoId" class="form-control" />
            <span asp-validation-for="CursoId" class="alert-danger"></span>
        </div>
        <div>
            <label asp-for="Ano"></label>
            <input asp-for="Ano" class="form-control" />
            <span asp-validation-for="Ano" class="alert-danger"></span>
            <span class="alert-danger">@Html.ValidationMessage("AnoInvalido")</span>
        </div>
        <input asp-for="Status" hidden/>
    </div>
    <input class="btn btn-success" type="submit" value="Atualizar"/>
</form>