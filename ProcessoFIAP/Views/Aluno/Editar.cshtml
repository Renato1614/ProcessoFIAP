@model Aluno
@{
}

<h1>Editar Aluno</h1>
<span class="alert-danger"> @Html.ValidationMessage("SenhaForte")</span>
<form method="post" asp-action="Editar">
    <div class="col-7">
        <div>
            <label asp-for="Nome"> </label>
            <input asp-for="Nome" class="form-control" value="@Model.Nome">
            <span asp-validation-for="Nome"></span>
        </div>
        <div>
            <label asp-for="Usuario"> </label>
            <input asp-for="Usuario" class="form-control">
            <span asp-validation-for="Usuario"></span>
        </div>
        <div>
            <label asp-for="Status"></label>
            <input asp-for="Status" hidden />
            @if (Model.Status == true)
            {
                <span class="alert-success">Ativo</span>
            }
            else
            {
                <span class="alert-danger">Inativo</span>

            }
        </div>

        <br />
    </div>
    <input class="btn btn-success" type="submit" />
</form>
